<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
<% if @tweet.errors.any? %>
 <div id="error_explanation">
<ul>
<% @tweet.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
 </div>
<% end %>
<%= f.label :content %>
<%= f.text_field :content %>
<br>
 <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>  
 <%= link_to "つぶやき画面にもどる", tweets_path %> 
